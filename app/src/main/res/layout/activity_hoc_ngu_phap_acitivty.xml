<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewDK4"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="#BDECB6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewDK5"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:background="#BDECB6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtquestcountDK" />

    <TextView
        android:id="@+id/txtscoreDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="28dp"
        android:drawablePadding="10dp"
        android:text="Score: 0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableTint="@color/color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtquestcountDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_question"
        android:drawablePadding="10dp"
        android:text="Question: 1/x"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txttimeDK" />

    <TextView
        android:id="@+id/txttimeDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawableLeft="@drawable/ic_timer"
        android:drawablePadding="10dp"
        android:text="30:00"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtquestionDK"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:text="Who invented android studio?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDK5"
        app:layout_constraintEnd_toEndOf="@+id/viewDK5"
        app:layout_constraintStart_toStartOf="@+id/viewDK5"
        app:layout_constraintTop_toTopOf="@+id/viewDK5" />
    <Button
        android:id="@+id/txtanswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dap an 1"
        android:textSize="16sp"
        android:background="@color/switch_thumb_color"
        app:layout_constraintStart_toStartOf="@id/viewDK5"
        app:layout_constraintTop_toBottomOf="@id/txtquestionDK" />

    <Button
        android:id="@+id/txtanswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dap an 2"
        android:textSize="16sp"
        android:background="@color/switch_thumb_color"

        app:layout_constraintStart_toStartOf="@id/viewDK5"
        app:layout_constraintTop_toBottomOf="@id/txtanswer1"
        app:layout_constraintVertical_bias="0.0" /> <!-- Add this line -->

    <Button
        android:id="@+id/txtanswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dap an 3"
        android:background="@color/switch_thumb_color"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/viewDK5"
        app:layout_constraintTop_toBottomOf="@id/txtanswer2"
        app:layout_constraintVertical_bias="0.0" /> <!-- Add this line -->

    <Button
        android:id="@+id/txtanswer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dap an 4"
        android:background="@color/switch_thumb_color"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/viewDK5"
        app:layout_constraintTop_toBottomOf="@id/txtanswer3"
        app:layout_constraintVertical_bias="0.0" /> <!-- Add this line -->

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btnQuitDK"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Thoát"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:backgroundTint="@color/darkOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnconfirmDK"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Nộp bài"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:backgroundTint="@color/darkOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
